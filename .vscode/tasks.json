{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "chmod-scripts",
            "type": "shell",
            "command": "chmod +x ${workspaceFolder}/scripts/*.sh",
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/TauriBlazorBoilerplate.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/TauriBlazorBoilerplate.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/TauriBlazorBoilerplate.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "optimize-rust",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/optimize-rust.sh",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "fast-build",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/fast-build.sh",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "fast-build-release",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/fast-build.sh --release",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}